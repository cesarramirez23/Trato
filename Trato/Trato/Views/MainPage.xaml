<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Trato.Views.MainPage" Title="Bienvenido" BackgroundColor="White">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="img" TargetType="Image">
                <Setter Property="Source" Value="LOGOTRATOESPECIAL.png"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="Margin" Value="0,0,4,0"/>
                <Setter Property="VerticalOptions" Value="StartAndExpand"/>
            </Style>
            <Style x:Key="ImgBut" TargetType="Image">
            </Style>
            <Style x:Key="Lbl" TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="Grid.Column" Value="0"/>
                <Setter Property="Grid.ColumnSpan" Value="1"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    
            <!-- para encimar texto a la imagen https://forums.xamarin.com/discussion/92896/display-an-image-inside-in-a-text-->
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
                <Label Text="" x:Name="M_mensaje" HorizontalOptions="Center" HorizontalTextAlignment="Center"
                   Margin="5,1" IsVisible="false" Style="{StaticResource AzulMedLbl}" FontFamily="Helvetica"/>
                <Image Source="LOGOTRATOESPECIAL.png" Grid.Column="0" Grid.Row="0" HeightRequest="250"></Image>
                <!--
                <Grid>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="400"/>
                    </Grid.RowDefinitions>
                    <Image x:Name="MainBanner" Source="" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Grid.Column="0" Grid.Row="1" Aspect="AspectFit" Margin="0,20">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Fn_AbrirSitio"   NumberOfTapsRequired="1"></TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
                </Grid>
                    -->
            <Grid VerticalOptions="EndAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Grid.Column="1">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Fn_AbrirSitio"/>
                    </StackLayout.GestureRecognizers>
                    <Image Source="Logo_Ana" Aspect="AspectFit" HeightRequest="100"/>
                    <Label Text="COTIZA Y ASEGURA TU AUTO AQUÍ" Style="{StaticResource AzulMedLbl}" 
                       TextColor="Black" HorizontalOptions="Center"/>
                </StackLayout>

                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Fn_AbrirSitioSolin"/>
                    </StackLayout.GestureRecognizers>
                    <Image Source="logo_colores.jpg" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="100"/>
                </StackLayout>
            </Grid>

            </StackLayout>
    </ContentPage.Content>
</ContentPage>
