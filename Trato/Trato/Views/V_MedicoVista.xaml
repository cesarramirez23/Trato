<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_MedicoVista" BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label FontSize="Large" HorizontalOptions="CenterAndExpand" IsVisible="True" x:Name="Mensaje"
                       TextColor="{StaticResource AzulTab}" Text="Buscando Información"/>
                <StackLayout Orientation="Vertical" Margin="20,30" x:Name="StackTodo" IsVisible="False">
                    <Image x:Name="img" WidthRequest="250" HeightRequest="250" BackgroundColor="Transparent"/>
                    <Label FontSize="Large" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" 
                           TextColor="{StaticResource AzulTab}" Text="{Binding v_completo}"/>
                    <Label Text="{Binding v_Especialidad}" TextColor="{StaticResource GrisBold}" HorizontalOptions="CenterAndExpand"/>
                    <ContentView HeightRequest="2" BackgroundColor="{StaticResource AzulTab}" HorizontalOptions="FillAndExpand"/>
                    <StackLayout>
                        <Label Text="Descripción" TextColor="{StaticResource AzulTab}" FontSize="Large" HorizontalOptions="Start"/>
                        <Label TextColor="{StaticResource GrisBold}" Text="{Binding v_descripcion}"/>
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Domicilio" TextColor="{StaticResource AzulTab}" FontSize="Large" HorizontalOptions="Start"/>
                        <Label TextColor="{StaticResource GrisBold}" >
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Fn_AbrirMapa"/>
                            </Label.GestureRecognizers>
                            <Label.FormattedText>
                                <FormattedString >
                                    <Span Text="{Binding v_Domicilio}"/>
                                    <Span Text=" , "/>
                                    <Span Text="{Binding v_Ciudad}"/>
                                    <Span Text=" , "/>
                                    <Span Text="{Binding v_estado}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Teléfono" TextColor="{StaticResource AzulTab}" FontSize="Large" HorizontalOptions="Start"/>
                        <Label TextColor="{StaticResource GrisBold}" Text="{Binding v_Tel}"/>
                    </StackLayout>
                    <StackLayout x:Name="StackCorreo" IsVisible="False">
                        <Label Text="Correo Electrónico" TextColor="{StaticResource AzulTab}" FontSize="Large" HorizontalOptions="Start"/>
                        <Label TextColor="{StaticResource GrisBold}" Text="{Binding v_Correo}"/>
                    </StackLayout>
                    <StackLayout x:Name="StackHorario" IsVisible="False">
                        <Label Text="Horario" TextColor="{StaticResource AzulTab}" FontSize="Large" HorizontalOptions="Start"/>
                        <Label TextColor="{StaticResource GrisBold}" Text="{Binding v_horario}"/>
                    </StackLayout>
                    <StackLayout x:Name="StackSitio" IsVisible="False">
                        <Label Text="Sitio web" TextColor="{StaticResource AzulTab}" FontSize="Large" HorizontalOptions="Start"/>
                        <Label TextColor="{StaticResource GrisBold}" Text="{Binding v_sitio}"/>
                    </StackLayout>
                    <StackLayout x:Name="StackBeneficios" IsVisible="False">
                        <Label Text="Beneficios" TextColor="{StaticResource AzulTab}" FontSize="Large" HorizontalOptions="Start"/>
                        <Label TextColor="{StaticResource GrisBold}" Text="{Binding v_beneficio}"/>
                    </StackLayout>
                    <Button x:Name="boton" Text="Solicitar Cita" Margin="0,5" 
                        IsVisible="False" Style="{StaticResource Buton}" Clicked="Fn_Cita"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
