<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.V_Pagos" BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView Margin="20,5,20,5">
            <StackLayout>
                <Label Style="{StaticResource AzulMedLbl}" x:Name="P_mensajes" Text="desde paypal"/>
                <StackLayout x:Name="StackCodigo">
                    <Label Style="{StaticResource AzulMedLbl}" x:Name="Prom_Mensaje" IsVisible="False"/>
                    <Label Style="{StaticResource AzulMedLbl}" Text="Código de promotor que te recomendó (OPCIONAL)"/>
                    <Entry Style="{StaticResource StyEntry}" x:Name="Prom_codigo"/>
                </StackLayout>
                <Button Text="Pagar ahora" Clicked="Fn_pagarPay" x:Name="P_PayBut" Style="{StaticResource Buton}"/>
                <Button Text="Generar ficha" Clicked="Fn_PagoOxxo" x:Name="P_OxxoBut" Style="{StaticResource Buton}"/>
                <!--<WebView x:Name="P_paypal" Navigated="Cargado" HeightRequest="500" IsVisible="False"/>-->
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>