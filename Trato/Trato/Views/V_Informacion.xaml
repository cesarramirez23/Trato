<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" BackgroundColor="White"
             x:Class="Trato.Views.V_Informacion"  NavigationPage.TitleIcon="Informacion" Title="Información">
    <ContentPage.Content>
        <ScrollView >
            <StackLayout Orientation="Vertical" >
                <Image Source="ICONOAPP.png" HeightRequest="300" WidthRequest="300" HorizontalOptions="Center" Aspect="AspectFit"/>
                <StackLayout Margin="10,0">
                    <Label FontSize="Large" Text="¿QUIÉNES SOMOS?" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource AzulPrincipal}"/>
                    <Label x:Name="v_info"  Text="" HorizontalTextAlignment="Start" FontSize="Medium"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>