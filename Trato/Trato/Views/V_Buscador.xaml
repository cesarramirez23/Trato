        <ListView x:Name="ListaGroup" ItemTapped="FnTapGroup" IsPullToRefreshEnabled="False" BackgroundColor="{StaticResource White}" 
                      HasUnevenRows="False" HeightRequest="30" IsGroupingEnabled="True">
