<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_Nota" Title="Nota Médica" BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView Margin="0,10">
            <StackLayout Margin="10,10">
                <Label x:Name="nombre" TextColor="{StaticResource AzulPrincipal}"
                       FontAttributes="Bold" FontSize="Large"/>
                <Label x:Name="especialidad" TextColor="{StaticResource GrisBold}"/>
                <Label x:Name="descripcion" TextColor="{StaticResource GrisBase}" FontSize="Small"/>
                <ContentView HeightRequest="2" BackgroundColor="{StaticResource AzulTab}"
                             HorizontalOptions="FillAndExpand" Margin="0,2,0,10" Padding="0,0"/>
                <Label x:Name="fecha" Text="{Binding v_fechaDate, StringFormat=' {0:dddd, dd MMMM yyyy hh:mm tt}'}" 
                       Margin="0,0,0,10" HorizontalOptions="End"/>
                <StackLayout x:Name="StackLista" BackgroundColor="{StaticResource AzulFondo}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>