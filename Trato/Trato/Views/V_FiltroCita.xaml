<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_FiltroCita" BackgroundColor="White" Title="Filtro">
    <ContentPage.Content>
        <ScrollView BackgroundColor="White" Margin="0,0,0,2">
            <StackLayout>
                <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="0,0" >
                    <Label Text="Estados de la cita" TextColor="{StaticResource AzulTab}"
                    HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" BackgroundColor="White"/>
                </StackLayout>
                <ContentView HeightRequest="2" BackgroundColor="{StaticResource AzulPrincipal}" 
                                 HorizontalOptions="FillAndExpand" Margin="0,0"/>
                <StackLayout x:Name="StackFiltro" Margin="10,5,10,10"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>