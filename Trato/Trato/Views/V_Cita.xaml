                                        <FormattedString>
                                            <Span Text="Fecha: " TextColor="{StaticResource AzulPrincipal}"/>
                                            <Span Text="{Binding v_fechaDate,StringFormat=' {0:MMMM dd yyyy}'}" TextColor="Black"/>
                                            <Span Text=" Hora:" TextColor="{StaticResource AzulPrincipal}"/>
                                            <Span Text="{Binding v_hora.Hours,StringFormat=' {0:00}'}" TextColor="Black"/>
