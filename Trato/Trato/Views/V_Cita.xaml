<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_Cita" BackgroundColor="White">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Name="filtros" Text="Filtrar" Clicked="Fn_ToolFil" Order="Primary" Priority="0"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ListaCita" Margin="5,10,5,10" IsPullToRefreshEnabled="True" VerticalOptions="FillAndExpand"
                              Refreshing="ListaCita_Refreshing" HasUnevenRows="True" ItemTapped="Fn_CitaTap"
                      SeparatorColor="{StaticResource AzulPrincipal}" SeparatorVisibility="Default">
                <ListView.Header>
                    <StackLayout>
                        <Label Text="Error de Conexión" FontSize="Large" x:Name="L_Error" IsVisible="False"></Label>
                    </StackLayout>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout BackgroundColor="{Binding v_color}" Margin="0,10">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="Campana.png" HorizontalOptions="Start" HeightRequest="30" Aspect="AspectFit"/>
                                    <Label FontSize="Medium" Text="{Binding v_fechaDate,StringFormat=' {0:MMMM dd yyyy hh:mm tt}'}" 
                                           TextColor="{StaticResource AzulTab}" FontAttributes="Bold" />
                                </StackLayout>
                                <Label Text="{Binding v_completo}" TextColor="{StaticResource AzulTab}"/>
                                <Label Text="{Binding v_Especialidad}" TextColor="{StaticResource GrisBase}"/>
                                <Label Text="{Binding v_Estadocita}" TextColor="{StaticResource AzulPrincipal}"/>
<!--
                                <Label  FontSize="Medium">
